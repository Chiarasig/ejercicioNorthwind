<mvc:View
    controllerName="com.proy.ejercicionorthwind.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page title="{i18n>title}">
         <content>
         <HBox >
         <Button press="navBack" text="{i18n>NavigateBack}"/>
         <Button
            icon="sap-icon://world"
            press="onChangeLanguage"
        />
        <Button
            id="themeButton"
            press="setDark"
            icon="{iconModel>/icon}"
        />
         </HBox>
            <core:Fragment type="XML" fragmentName="com.proy.ejercicionorthwind.fragments.fragmentTool" />
            <core:Fragment type="XML" fragmentName="com.proy.ejercicionorthwind.fragments.fragmentTable" />
        </content>
    </Page>
</mvc:View>
