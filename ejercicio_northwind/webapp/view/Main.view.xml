<mvc:View
    controllerName="com.proy.ejercicionorthwind.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox>
   <HBox>
            <ComboBox
                id="idProductIdComboBox"
                 selectedKey="{filters>/ProductId}"
                items="{
                    path: 'mock>/OrderCollection',
                    sorter: { path: 'ProductId' }
                }"
            >
                <core:ListItem
                    key="{mock>ProductId}"
                    text="{mock>ProductId}"
                />
            </ComboBox>

            <ComboBox
                id="idProductNameComboBox"
                 selectedKey="{filters>/ProductName}"
                items="{
                    path: 'mock>/OrderCollection',
                    sorter: { path: 'ProductName' }
                }"
            >
                <core:ListItem
                    key="{mock>ProductName}"
                    text="{mock>ProductName}"
                />
            </ComboBox>

            <Button
                text="{i18n>Search}"
                press="onSearchButtonPress"
            />

            <Button
                text="{i18n>ClearFilters}"
                press="onClear"
            />

            <Button
                icon="sap-icon://world"
                press="onChangeLanguage"
            />

            <Button
                id="themeButton"
                press="setDark"
                icon="{iconModel>/icon}"
            />
        </HBox>
        <Table
            id="idProductsTable"
            inset="false"
            items="{
                path: 'orderMock>/'
            }"
        >
            <columns>
                <Column width="12em">
                    <Text text="{i18n>ProductName}" />
                </Column>
                <Column width="8em">
                    <Text text="{i18n>UnitPrice}" />
                </Column>
                <Column width="8em">
                    <Text text="{i18n>TotalPrice}" />
                </Column>
                <Column width="8em">
                    <Text text="{i18n>ExtendedPrice}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    type="Active"
                    press="onItemPress"
                    vAlign="Middle"
                >
                    <cells>
                        <ObjectIdentifier title="{orderMock>ProductName}" />
                        <ObjectNumber
                            number="{orderMock>UnitPrice}"
                            unit="{i18n>USD}"
                        />
                        <ObjectNumber
                            number="{= ${orderMock>UnitPrice} * ${orderMock>Quantity} }"
                            unit="{i18n>USD}"
                        />
                        <ObjectNumber
                            number="{orderMock>ExtendedPrice}"
                            unit="{i18n>USD}"
                            state="{path: 'orderMock>ExtendedPrice', formatter: '.Formatter.extendedPriceState'}"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</mvc:View>
